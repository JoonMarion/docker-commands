# download imagem
    docker pull imagem-nome

# listar imagens 
    docker images

# remover imagem    
    docker rmi imagem-nome

# listar containers
    docker ps 

    # parametro para listar todos os eventos recentes
        docker ps -a  

# executar container 
    docker run imagem-nome

    # executar container com parametros
        docker run -parametros nome-da-imagem

        #parametros importantes
            -i -> interagir
            -t -> terminal
            -d -> rodar no background e printar o id

    # executar dentro do container
        docker exec -it container-id comando(/bin/bash)
        exit

    # parar execução
        docker stop nome-da-imagem

    # remover container
        docker rm container-id