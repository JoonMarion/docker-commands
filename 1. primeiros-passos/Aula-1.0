# download imagem
    docker pull nome-da-imagem

# listar imagens 
    docker images

# executar container 
    docker run nome-da-imagem

    # executar e interagir com o container
        docker run -it nome-da-imagem

    # parar execução
        docker stop nome-da-imagem

# listar containers
    docker ps 

    # parametro para listar todos os eventos recentes
        docker ps -a  